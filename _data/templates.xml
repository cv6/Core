        min-width: max-content;

        .m-transition();

        &.remove {
            height: @xf-cv6IndexTabSize;
        }

        &.no-result {
            .xf-cv6IndexTabNoResult();

            &:hover {
                background: @xf-cv6IndexTabNoResult--background-color;
